  },
  "private": true,
  "devDependencies": {
    "commander": "^2.17.1",
    "config": "^2.0.1",
    "coveralls": "^3.0.2",
    "js-yaml": "^3.12.0",
    "lerna": "^3.2.1",
    "lodash": "^4.17.10",
    "syncpack": "^3.0.0"
  },
  "bugs": {
    "url": "https://github.com/randytarampi/me/issues",
    "email": "bugs@randytarampi.ca"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/randytarampi/me.git"
  },
  "scripts": {
    "clean": "./bin/clean.sh",
    "bootstrap": "./bin/bootstrap.sh",
    "postinstall": "npm run bootstrap",
    "postinstall:all": "./bin/postinstall-all.sh",
    "postinstall:css": "./bin/postinstall-css.sh",
    "postinstall:posts": "./bin/postinstall-posts.sh",
    "postinstall:pseudoimage": "./bin/postinstall-pseudoimage.sh",
    "postinstall:resume": "./bin/postinstall-resume.sh",
    "pretest": "NODE_ENV=test npx lerna run pretest --no-bail",
    "test": "NODE_ENV=test npx lerna run test --no-bail",
    "cover": "rm -rf .nyc_output/ coverage/ && npx lerna run cover --no-bail && mkdir .nyc_output/ coverage/ && npx lerna exec -- \"if [ -d \"./.nyc_output\" ]; then cp -rv .nyc_output ../..; fi;\" && npx nyc report --reporter=lcov && ls -al .nyc_output && ls -al coverage",
    "coveralls": "cat coverage/lcov.info | npx coveralls",
    "travis": "npm run cover && npm run coveralls",
    "kill": "npx lerna run kill"
  }
}
