  "scripts": {
    "pretest": "npx gulp -LLLL --color lint",
    "test": "NODE_ENV=test npx gulp -LLLL --color test",
    "postinstall": "npm run build",
    "start": "npm run dev",
    "dev": "npm run dev:client",
    "dev:client": "rm -rf dist/*.js && npx webpack-serve ./webpack.client.config.js --hotClient",
    "build": "npx gulp -LLLL --color build && npm run letter",
    "start:express": "npm run kill:express; node ./express.js & echo $! > /tmp/ca.randytarampi.me.letter.express.pid; echo \"Started express (`cat /tmp/ca.randytarampi.me.letter.express.pid`) from /tmp/ca.randytarampi.me.letter.express.pid\";",
    "kill:express": "if [ -f /tmp/ca.randytarampi.me.letter.express.pid ]; then echo \"Killing express (`cat /tmp/ca.randytarampi.me.letter.express.pid`) from /tmp/ca.randytarampi.me.letter.express.pid\"; kill -9 `cat /tmp/ca.randytarampi.me.letter.express.pid`; rm /tmp/ca.randytarampi.me.letter.express.pid; fi;",
    "letter": "NODE_ENV=puppeteer CAMPAIGN_SOURCE=letter npx gulp -LLLL --color letter",
    "docs": "npx gulp -LLLL --color docs",
    "cover": "rm -rf coverage/ .nyc_output/; NODE_ENV=test npx nyc gulp -LLLL --color test"
  },
